
<div class="row">


<div class="col-lg-2">
</div>
	


	<div class="box-container">

	<div id="story" class="box">

		<div class="text-center">
			<h1>Write  stories with your friends and your favorite authors. </h1>
		
			<p>Click the lines to explore stories from the community or click the blue button to start your own.</p>



			<%= @mode == "top" ? link_to("Top Stories", root_path(:mode => "top"), :class => "selected") : link_to("Top Stories", root_path(:mode => "top"))%> | 
			<%= 	@mode == "recent" ? link_to("Recent Lines", root_path(:mode => "recent"), :class => "selected") :  link_to("Recent Lines", root_path(:mode => "recent")) %> |
			<%= @mode == "new" ? link_to("New Stories", root_path(:mode => "new"), :class => "selected") : link_to("New Stories", root_path(:mode => "new")) %>
		</div>
		
		<div style="float:right;">
			<%= link_to '+ Start a story', new_line_path, :class => "btn btn-info btn-lg" %>
		</div>
	
			
		
		<% @lines.each do |line| %>
			<div class="story">

				<div class="depth story-link" title="This number represents how many branches have been added to the story"><%= line.depth %></div> 
				<div class="story-link" title="By clicking the links you'll be taken to the first branch of each story."><%= link_to "#{line.text}...", 	line_path(line), :class => "story-link" %> </div>
			</div>
		<% end %>

	<% unless @start == 0 %>
		<%= link_to 'Back', root_path(:start => @start-@num_display, :mode => @mode) %> |
	<% end %>
	<% if @has_next %>	
		<%= link_to 'Next', root_path(:start => @start + @num_display, :mode => @mode) %>
	<% end %>
	<br />

	</div>	

	


<div class="col-lg-2">

	</div>

</div>

