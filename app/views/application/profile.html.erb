<div id="story" class="box">
	<div class="text-center">	
	 <img class="prof-icon" src="<%= @user.profile_image_url %>"> <h3> <%= @user.name %> </h3>
	</div>

	

 
 <div class="pro-box" >	
	<div class="pro-line">
	


	<h4>Stories You Contribute To:</h4>
		<ul>
			<% @user.stories.each do |story| %>
			<li>
				<%= link_to story.first_line.text, line_path(story.first_line) %>	
			</li>
			<% end %>
		</ul>
	<h4>Lines By You:</h4>
		<ul>
			<% @user.lines.each do |line| %>
			<li>
				<%= link_to line.text, line_path(line) %>
				
			</li>
			<% end %>
		</ul>

	</div>
</div>	


</div>